#!/usr/bin/env bash
# This script modifies /etc/hosts to:
# - Map localhost to 127.0.0.2
# - Map facebook.com to 8.8.8.8

HOSTS_FILE="/etc/hosts"

# Ensure script is run as root
if [ "$EUID" -ne 0 ]; then
  echo "This script must be run as root"
  exit 1
fi

# Remove any existing localhost entry
sed -i '/[[:space:]]localhost$/d' "$HOSTS_FILE"

# Remove any existing facebook.com entry
sed -i '/[[:space:]]facebook\.com$/d' "$HOSTS_FILE"

# Add new required entries
echo "127.0.0.2 localhost" >> "$HOSTS_FILE"
echo "8.8.8.8 facebook.com" >> "$HOSTS_FILE"
